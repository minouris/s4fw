{
  "name": "Sims 4 Modding (Python 3.7)",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "python.envFile": "${workspaceFolder}/.env",
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "ms-python.python",
        "loic-pryv.automatic-terminal"
      ]
    }
  },
  "remoteUser": "sims4fw",
  "workspaceFolder": "/workspaces/s4fw",
  "mounts": [
    "source=/mnt/c/Program Files/EA Games/The Sims 4/Data/Simulation/Gameplay/,target=/workspaces/s4fw/ea_api,type=bind,consistency=cached"
  ]
}